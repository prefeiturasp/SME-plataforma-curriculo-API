      modules: {
        toolbar:  [
          ['bold', 'italic','underline', 'strike', 'link', 'blockquote', 'list', 'sub', 'super']
        ]
      },
      formats: [
        'bold',
        'italic',
        'underline',
        'strike',
        'link',
        'blockquote',
        'list',
        #'sub',
        #'super'
      ],
      theme: 'snow'
    }
  }
} %>
